# Values for Staging environment (DigitalOcean)
replicaCount: 1

image:
  repository: ghcr.io/geraldobl58/nexo-fe
  tag: "staging-latest"
  pullPolicy: Always

imagePullSecrets:
  - name: ghcr-secret

ingress:
  enabled: true
  className: "nginx"
  annotations:
  hosts:
    - host: staging.nexo.local
      paths:
        - path: /
          pathType: Prefix
  tls:
    - secretName: nexo-fe-staging-tls
      hosts:
        - staging.nexo.local

resources:
  limits:
    cpu: 200m
    memory: 256Mi
  requests:
    cpu: 10m
    memory: 64Mi

autoscaling:
  enabled: false

env:
  NODE_ENV: production
  API_URL: http://nexo-be-staging:3000
  NEXT_PUBLIC_API_URL: http://staging.api.nexo.local
  NEXT_PUBLIC_KEYCLOAK_URL: http://staging.auth.nexo.local
  NEXT_PUBLIC_KEYCLOAK_REALM: nexo
  NEXT_PUBLIC_KEYCLOAK_CLIENT_ID: nexo-web

podDisruptionBudget:
  enabled: false

podAnnotations:
  app.kubernetes.io/commit: "pending"

metrics:
  enabled: false
  path: /api/metrics
  serviceMonitor:
    enabled: false
