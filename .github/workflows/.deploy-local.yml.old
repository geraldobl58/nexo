name: CD - Deploy to Local CloudLab

on:
  push:
    branches: [develop]
    paths:
      - "apps/nexo-be/**"
      - "apps/nexo-fe/**"
      - "apps/nexo-auth/**"
      - "local/helm/**"

env:
  REGISTRY: harbor.nexo.local
  ARGOCD_SERVER: argocd.nexo.local

jobs:
  detect-changes:
    name: Detect Changed Apps
    runs-on: ubuntu-latest
    outputs:
      backend: ${{ steps.filter.outputs.backend }}
      frontend: ${{ steps.filter.outputs.frontend }}
      auth: ${{ steps.filter.outputs.auth }}
    steps:
      - uses: actions/checkout@v4
      - uses: dorny/paths-filter@v2
        id: filter
        with:
          filters: |
            backend:
              - 'apps/nexo-be/**'
            frontend:
              - 'apps/nexo-fe/**'
            auth:
              - 'apps/nexo-auth/**'

  deploy-backend:
    name: Deploy Backend
    needs: detect-changes
    if: needs.detect-changes.outputs.backend == 'true'
    runs-on: self-hosted

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set image tag
        id: tag
        run: |
          SHORT_SHA=$(echo ${{ github.sha }} | cut -c1-7)
          echo "tag=develop-${SHORT_SHA}" >> $GITHUB_OUTPUT
          echo "short_sha=${SHORT_SHA}" >> $GITHUB_OUTPUT

      - name: Build Docker image
        run: |
          cd apps/nexo-be
          docker build -t ${{ env.REGISTRY }}/nexo/nexo-be:${{ steps.tag.outputs.tag }} .
          docker tag ${{ env.REGISTRY }}/nexo/nexo-be:${{ steps.tag.outputs.tag }} \
                     ${{ env.REGISTRY }}/nexo/nexo-be:latest

      - name: Login to Harbor
        run: |
          echo "${{ secrets.HARBOR_PASSWORD }}" | docker login ${{ env.REGISTRY }} \
            --username ${{ secrets.HARBOR_USERNAME }} --password-stdin

      - name: Push to Harbor
        run: |
          docker push ${{ env.REGISTRY }}/nexo/nexo-be:${{ steps.tag.outputs.tag }}
          docker push ${{ env.REGISTRY }}/nexo/nexo-be:latest

      - name: Update Helm values
        run: |
          sed -i '' "s|repository:.*|repository: ${{ env.REGISTRY }}/nexo/nexo-be|" \
            local/helm/nexo-be/values-local.yaml
          sed -i '' "s|tag:.*|tag: \"${{ steps.tag.outputs.tag }}\"|" \
            local/helm/nexo-be/values-local.yaml

      - name: Commit and push Helm changes
        run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          git add local/helm/nexo-be/values-local.yaml
          git commit -m "chore: update nexo-be to ${{ steps.tag.outputs.tag }}" || exit 0
          git push

      - name: Sync ArgoCD
        run: |
          argocd login ${{ env.ARGOCD_SERVER }} \
            --auth-token ${{ secrets.ARGOCD_AUTH_TOKEN }} \
            --insecure
          argocd app sync nexo-be-local --force
          argocd app wait nexo-be-local --timeout 300

  deploy-frontend:
    name: Deploy Frontend
    needs: detect-changes
    if: needs.detect-changes.outputs.frontend == 'true'
    runs-on: self-hosted

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set image tag
        id: tag
        run: |
          SHORT_SHA=$(echo ${{ github.sha }} | cut -c1-7)
          echo "tag=develop-${SHORT_SHA}" >> $GITHUB_OUTPUT

      - name: Build Docker image
        run: |
          cd apps/nexo-fe
          docker build -t ${{ env.REGISTRY }}/nexo/nexo-fe:${{ steps.tag.outputs.tag }} \
            --build-arg NEXT_PUBLIC_API_URL=http://develop.api.nexo.local \
            --build-arg NEXT_PUBLIC_AUTH_URL=http://develop.auth.nexo.local \
            .
          docker tag ${{ env.REGISTRY }}/nexo/nexo-fe:${{ steps.tag.outputs.tag }} \
                     ${{ env.REGISTRY }}/nexo/nexo-fe:latest

      - name: Login to Harbor
        run: |
          echo "${{ secrets.HARBOR_PASSWORD }}" | docker login ${{ env.REGISTRY }} \
            --username ${{ secrets.HARBOR_USERNAME }} --password-stdin

      - name: Push to Harbor
        run: |
          docker push ${{ env.REGISTRY }}/nexo/nexo-fe:${{ steps.tag.outputs.tag }}
          docker push ${{ env.REGISTRY }}/nexo/nexo-fe:latest

      - name: Update Helm values
        run: |
          sed -i '' "s|repository:.*|repository: ${{ env.REGISTRY }}/nexo/nexo-fe|" \
            local/helm/nexo-fe/values-local.yaml
          sed -i '' "s|tag:.*|tag: \"${{ steps.tag.outputs.tag }}\"|" \
            local/helm/nexo-fe/values-local.yaml

      - name: Commit and push Helm changes
        run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          git add local/helm/nexo-fe/values-local.yaml
          git commit -m "chore: update nexo-fe to ${{ steps.tag.outputs.tag }}" || exit 0
          git push

      - name: Sync ArgoCD
        run: |
          argocd login ${{ env.ARGOCD_SERVER }} \
            --auth-token ${{ secrets.ARGOCD_AUTH_TOKEN }} \
            --insecure
          argocd app sync nexo-fe-local --force
          argocd app wait nexo-fe-local --timeout 300
